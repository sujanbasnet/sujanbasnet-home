<script>
	// Portfolio show more functionality
	const portfolioGrid = document.getElementById('portfolio-grid');
	const portfolioItems = document.querySelectorAll('.portfolio-item');
	const showMorePortfolioBtn = document.getElementById('show-more-portfolio');
	let visiblePortfolioItems = 3;

	// Experience show more functionality
	const experienceTimeline = document.getElementById('experience-timeline');
	const experienceItems = document.querySelectorAll('.experience-item');
	const showMoreExperienceBtn = document.getElementById('show-more-experience');
	let visibleExperienceItems = 3;

	// Initialize visibility
	function initializeVisibility() {
		// Hide all portfolio items except first 3
		portfolioItems.forEach((item, index) => {
			if (index >= visiblePortfolioItems) {
				(item as HTMLElement).style.display = 'none';
			}
		});

		// Hide all experience items except first 3
		experienceItems.forEach((item, index) => {
			if (index >= visibleExperienceItems) {
				(item as HTMLElement).style.display = 'none';
			}
		});

		// Update button visibility
		updateButtonVisibility();
	}

	// Update button visibility
	function updateButtonVisibility() {
		// Portfolio button
		if (showMorePortfolioBtn) {
			if (visiblePortfolioItems >= portfolioItems.length) {
				showMorePortfolioBtn.style.display = 'none';
			} else {
				showMorePortfolioBtn.style.display = 'inline-block';
			}
		}

		// Experience button
		if (showMoreExperienceBtn) {
			if (visibleExperienceItems >= experienceItems.length) {
				showMoreExperienceBtn.style.display = 'none';
			} else {
				showMoreExperienceBtn.style.display = 'inline-block';
			}
		}
	}

	// Show more portfolio items
	if (showMorePortfolioBtn) {
		showMorePortfolioBtn.addEventListener('click', () => {
			visiblePortfolioItems += 3;
			portfolioItems.forEach((item, index) => {
				if (index < visiblePortfolioItems) {
					(item as HTMLElement).style.display = 'block';
				}
			});
			updateButtonVisibility();
		});
	}

	// Show more experience items
	if (showMoreExperienceBtn) {
		showMoreExperienceBtn.addEventListener('click', () => {
			visibleExperienceItems += 3;
			experienceItems.forEach((item, index) => {
				if (index < visibleExperienceItems) {
					(item as HTMLElement).style.display = 'block';
				}
			});
			updateButtonVisibility();
		});
	}

	// Initialize on page load
	document.addEventListener('DOMContentLoaded', initializeVisibility);
</script>
